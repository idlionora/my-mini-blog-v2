---
import "@styles/global.css";
import "@styles/navbar.css";

import MainHead from "@layouts/MainHead.astro";
import NavigationBar from "@components/NavigationBar.astro";

interface Props {
    title?: string;
}

const {title = "My Mini Blog"} = Astro.props as Props;
---

<html lang="en">
	<MainHead {title}/>
	<body class="bg-neutral-00 relative w-full min-h-dvh overflow-x-hidden">
		<NavigationBar />
		<slot/>
		<script src="../scripts/navbar.js"></script>
	</body>
</html>

