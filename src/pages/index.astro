---
import MainLayout from "@layouts/MainLayout.astro"
import BlogCard from "@components/BlogCard.astro"
import cardData from "../data/mainpageCards"
---

<MainLayout title="myMiniBlog">
	<main class="w-screen px-4 sm:px-5 flex flex-col items-center">
		<h2 class="font-heading font-bold text-[1.25rem] bg-theme-blue px-4 py-3 w-full max-w-[18rem] text-center rounded-2xl text-neutral-100 mt-9 mb-7">
				All Blog Posts</h2>
		<section class="w-full max-w-screen-xl flex justify-center sm:grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-7">
			{cardData.map((card, index) => <BlogCard {index} blogpostImg={card.blogpostImg} userId={card.user._id} userName={card.user.name} createdAt={card.createdAt} commentCount={card.commentCount} title={card.title} summary={card.summary} tags={card.tags} slug={card.slug}/>)}
		</section>
	</main>
</MainLayout>
